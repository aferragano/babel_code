<%= form_for @original_snippet do |f|%>
  <h1><%= @original_snippet.title %></h1>
  Description:<br>
  <%= f.text_area :description %><br>
  Code Snippet:<br>
  <div class="code-area">
  <%= f.text_area :snippet %><div><br>
  <%= f.collection_select :language_id, Language.order(:language), :id, :language %>
  <%= f.submit "Save" %>
<% end %>
